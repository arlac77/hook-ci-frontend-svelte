{
  "name": "hook-ci-frontend-svelte",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "description": "hook-ci web fronend",
  "keywords": [
    "hook-ci",
    "svelte",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "node --run prepare:vite",
    "prepare:vite": "vite build",
    "start": "vite",
    "lint": "node --run lint:css",
    "lint:css": "stylelint ./src/*.css",
    "preview": "vite preview",
    "serve": "vite preview"
  },
  "dependencies": {
    "mf-styling": "^3.2.6",
    "microtip": "^0.2.2",
    "repository-provider": "^35.2.27",
    "svelte-common": "^6.15.38",
    "svelte-guard-history-router": "^6.1.2",
    "svelte-session-manager": "^3.0.19"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@sveltejs/vite-plugin-svelte": "^5.0.1",
    "npm-pkgbuild": "^15.6.10",
    "semantic-release": "^24.2.0",
    "stylelint": "^16.11.0",
    "stylelint-config-standard": "^36.0.1",
    "svelte": "^5.4.0",
    "svql": "0.0.35",
    "vite": "^6.0.2"
  },
  "optionalDependencies": {
    "mf-hosting-frontend": "^3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/hook-ci-frontend-svelte.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/hook-ci-frontend-svelte/issues"
  },
  "homepage": "https://github.com/arlac77/hook-ci-frontend-svelte#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/"
    },
    "api": "${http.path}/api",
    "dependencies": {
      "hook-ci": ">=1.56.0"
    },
    "frontend": true,
    "graphQl": "${api}/graphql",
    "http.path": "${http.base.path}/ci",
    "install.dir": "${install.base.dir}hook-ci/frontend/"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-npm-pkgbuild",
      "arlac77/template-svelte-app"
    ]
  }
}
