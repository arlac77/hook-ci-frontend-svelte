{
  "name": "hook-ci-frontend-svelte",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "hook-ci web fronend",
  "keywords": [
    "hook-ci",
    "svelte",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "serve": "vite preview"
  },
  "dependencies": {
    "mf-styling": "^1.7.52",
    "microtip": "^0.2.2",
    "repository-provider": "^32.7.3",
    "svelte-common": "^4.22.13",
    "svelte-guard-history-router": "^5.5.31",
    "svelte-session-manager": "^2.2.1"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@sveltejs/vite-plugin-svelte": "^1.4.0",
    "npm-pkgbuild": "^11.7.11",
    "semantic-release": "^21.0.1",
    "svelte": "^3.58.0",
    "svql": "0.0.35",
    "vite": "^3.2.5"
  },
  "optionalDependencies": {
    "mf-hosting-frontend": "^1.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/hook-ci-frontend-svelte.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/hook-ci-frontend-svelte/issues"
  },
  "homepage": "https://github.com/arlac77/hook-ci-frontend-svelte#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/"
    },
    "depends": {
      "hook-ci": ">=1.56.0"
    },
    "frontend": true,
    "http.path": "${http.base.path}/ci",
    "api": "${http.path}/api",
    "graphQl": "${api}/graphql",
    "install.dir": "${install.base.dir}hook-ci/frontend/"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-svelte-app"
    ]
  }
}
