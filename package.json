{
  "name": "hook-ci-frontend-svelte",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "hook-ci web fronend",
  "keywords": [
    "hook-ci",
    "svelte",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "start": "rollup -c -w rollup.config.mjs && vite",
    "dev": "vite",
    "serve": "vite preview"
  },
  "dependencies": {
    "mf-styling": "^1.2.22",
    "microtip": "^0.2.2",
    "repository-provider": "^31.2.7",
    "svelte-common": "^4.4.41",
    "svelte-guard-history-router": "^4.6.14",
    "svelte-session-manager": "^2.0.10"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.49",
    "npm-pkgbuild": "^10.7.10",
    "semantic-release": "^19.0.3",
    "svelte": "^3.48.0",
    "svql": "0.0.35",
    "vite": "^2.9.12"
  },
  "optionalDependencies": {
    "mf-hosting": "^1.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/hook-ci-frontend-svelte.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/hook-ci-frontend-svelte/issues"
  },
  "homepage": "https://github.com/arlac77/hook-ci-frontend-svelte#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": {
        "base": "public"
      },
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf"
    },
    "hooks": "pkg/hooks.sh",
    "groups": "webapp",
    "depends": {
      "hook-ci": ">=1.56.0"
    },
    "http.path": "/services/ci",
    "api": "{{http.path}}/api",
    "graphQl": "{{api}}/graphql",
    "install.dir": "${install.base.dir}hook-ci/frontend/"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-svelte-app#next"
    ]
  }
}
